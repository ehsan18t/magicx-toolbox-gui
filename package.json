{
  "name": "magicx-toolbox",
  "version": "3.0.0",
  "description": "MagicX Toolbox - Windows System Optimization & Tweaking Application",
  "author": "Ehsan Khan <ehsan18t@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ehsan18t/magicx-toolbox-gui"
  },
  "keywords": [
    "tauri",
    "svelte",
    "sveltekit",
    "vite",
    "tailwindcss",
    "starter-template"
  ],
  "type": "module",
  "scripts": {
    "dev": "tauri dev",
    "build": "tauri build",
    "build:debug": "tauri build --debug",
    "prepare": "svelte-kit sync || echo ''",
    "copy-icons": "cpy src-tauri/icons/Toolbox.ico static/icons --flat",
    "postinstall": "bun run copy-icons",
    "clean": "rimraf .svelte-kit dist src-tauri/target",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write ./src",
    "format:check": "prettier --check ./src",
    "format:rust": "cd src-tauri && cargo fmt",
    "format:rust:check": "cd src-tauri && cargo fmt -- --check",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "lint:rust": "cd src-tauri && cargo clippy --all-targets --all-features -- -D warnings",
    "lint:rust:fix": "cd src-tauri && cargo clippy --all-targets --all-features --fix --allow-dirty --allow-staged",
    "type-check": "tsc --noEmit",
    "validate": "bun run format:check && bun run lint && bun run type-check && bun run check && bun run format:rust:check && bun run lint:rust",
    "tauri": "tauri"
  },
  "dependencies": {
    "@leeoniya/ufuzzy": "^1.0.19",
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/plugin-dialog": "~2.4.2",
    "@tauri-apps/plugin-fs": "~2.4.4",
    "@tauri-apps/plugin-opener": "^2.5.2",
    "@tauri-apps/plugin-process": "~2.3.1",
    "@tauri-apps/plugin-shell": "~2.3.3",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.39.2",
    "@iconify-json/bi": "^1.2.7",
    "@iconify-json/fluent": "^1.2.36",
    "@iconify-json/mdi": "^1.2.3",
    "@iconify-json/ri": "^1.2.6",
    "@iconify-json/tabler": "^1.2.23",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.49.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/vite": "^4.1.18",
    "@tauri-apps/cli": "^2.9.6",
    "@types/node": "^24.10.4",
    "cpy-cli": "^6.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.13.1",
    "prettier": "^3.7.4",
    "prettier-plugin-svelte": "^3.4.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "rimraf": "^6.1.2",
    "svelte": "^5.46.0",
    "svelte-check": "^4.3.4",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0",
    "unplugin-icons": "^22.5.0",
    "vite": "^7.3.0"
  }
}
