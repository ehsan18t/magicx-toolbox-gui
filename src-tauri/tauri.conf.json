{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MagicX Toolbox",
  "version": "3.0.0",
  "identifier": "me.ehsankhan.magicx-toolbox",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "vite dev",
    "beforeBuildCommand": "vite build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "MagicX Toolbox",
        "decorations": false,
        "width": 1024,
        "minWidth": 600,
        "height": 700,
        "minHeight": 400,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "visible": true,
        "backgroundColor": "#09090b"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/Toolbox.ico"],
    "publisher": "Ehsan Khan",
    "category": "Productivity",
    "shortDescription": "Short application description",
    "longDescription": "Long application description",
    "resources": ["tweaks/*"],
    "copyright": "Copyright Â© 2025 Ehsan Khan",
    "licenseFile": "../LICENSE",
    "externalBin": [],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}
